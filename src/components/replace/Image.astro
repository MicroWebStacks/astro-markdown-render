---
import {relAssetToUrl} from '../../libs/utils'
import Panzoom from './panzoom/panzoom.astro'

export interface Props {
    node: object;
    path: string;
}

const { node, path} = Astro.props as Props;
const {title, url, alt} = node;

const asseturl = relAssetToUrl(url, path)

const isSvg = asseturl.endsWith(".svg")
const isImg = !isSvg
---
<Panzoom src={asseturl} alt={alt} title={title} />
