---
import {toHast} from 'mdast-util-to-hast'
import {toHtml} from 'hast-util-to-html'
import {node_slug} from '../libs/utils'
import Svgicons from './svgicons.astro';
export interface Props {
    node: object;
}

const { node } = Astro.props as Props;

const HeadingLevel = `h${node.depth}`
const slug = node_slug(node)

---
<HeadingLevel id={slug} class="heading bar">
  <a href={`#${slug}`} class="link">
    <div class="text">
      {node.children.map((node)=>(
        <Fragment set:html={toHtml(toHast(node))}></Fragment>
      ))}
    </div>
    <div class="icon"><Svgicons filename="link"/></div>
  </a>
</HeadingLevel>

<style>
.heading.bar{
  width: fit-content;
}
.link{
    display: flex;
    gap:10px;
}
.link:hover{
  text-decoration: underline;
}
</style>
<style is:inline>
.icon > svg{
    width:16px;
    fill:rgb(101, 96, 96);
}
.heading.bar > a{
    text-decoration: none;
    color: inherit;
  }
</style>
