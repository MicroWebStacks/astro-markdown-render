---
import Svgicons from './svgicons.astro';
export interface Props {
    id: string;
    tag: string;
}

const { id,tag } = Astro.props as Props;

const Heading = tag

---
<Heading id={id} class="heading bar">
  <a href={`#${id}`} class="link">
    <div class="text">
      <slot/>
    </div>
    <div class="icon"><Svgicons filename="link"/></div>
  </a>
</Heading>

<style>
.heading.bar{
  width: fit-content;
}
.link{
    display: flex;
    gap:10px;
}
.link:hover{
  text-decoration: underline;
}
</style>
<style is:inline>
.icon > svg{
    width:16px;
    fill:rgb(101, 96, 96);
}
.heading.bar > a{
    text-decoration: none;
    color: inherit;
  }
</style>
