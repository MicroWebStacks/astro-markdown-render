---

export interface Props {
    node: object;
}

const {node} = Astro.props;

---
{(node.tag_type == "page")&&
    <a href={`/${node.tag_value}`}>{node.tag_value}</a>
}

<style>
a{
    text-decoration: none;
    color: black;
    background-color: #ddd;
    padding: 3px;
    padding-top: 1px;
    border-radius: 5px;
}
a:hover{
    box-shadow: 2px 2px 3px 3px #ccc;
}
</style>
