---
import Highlighter from './Highlighter.astro'
import {diagram_cache} from './diagram.js'
import plantumlEncoder from "plantuml-encoder";

export interface Props {
    code: string;
    params: object;
}

const { code, params } = Astro.props as Props;

async function generator(code){
    const url = `${config.plantuml_server}/${plantumlEncoder.encode(code)}`;
    const response = await fetch(url)
    const svg_text = await response.text()
    return svg_text
}

const svg_text = await diagram_cache(code, generator)
---
<button>code/diagram</button>
<div class="diagram">
    <Fragment set:html={svg_text}></Fragment>
</div>
<div class="code">
    <Highlighter code={code} language={"javascript"} params={params} />
</div>

<style>
.code{
    width: auto;
}
</style>./diagram.js